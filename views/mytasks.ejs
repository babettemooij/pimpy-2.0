<% include partials/html-header %>
<% include partials/header %>

<div class="container-fluid">
	<div class="row">
		<div class="col-sm-2 col-xs-12 sidebar">
			<ul class="nav nav-sidebar">
				<div class="team-name text-center">
					<p>FSR FNWI</p>
				</div>
			</ul>
			<ul class="nav nav-sidebar">
				<li><a id="sidecurrent" href="/mytasks">My Tasks</a></li>
				<% groups.forEach(function(tab){ %>
					<li><a href="/tasks/<%=tab.title%>"> <%= tab.title %></a></li>
				<% }) %>
				<li><a href="/newgroup"><span class="glyphicon glyphicon-plus"></span> Add group</a></li>
				<li><a href="/newminutes"><span class="glyphicon glyphicon-plus"></span> Add minutes</a></li>
			</ul>
		</div>

		<div class="col-sm-10 col-xs-12 col-xl-8 center-me main">

			<h1><%= group.title%></h1>
			<% group.members.forEach(function(member) { %>
				<h3><%= member.name %></h3>
				<div class="table">
				<div class="thead">
					<div class="tr" colspan="3">
						<span class="th">Task</span>
						<span class="th">People</span>
						<span class="th">Status</span>
					</div>
				</div>
					<div class="tbody">
						<% member.tasks.forEach(function(task){ %>
							<div class="tr">
								<span class="td"> <%= task.todo %> </span>
								<span class="td"> <% task.people.forEach(function(person){ %>
									<% if (person == task.people[task.people.length - 1]) { %>
										<%= person %>
									<% } else { %>
										<%= person + ", " %> 
									<% } %>
								<% }) %> </span>
								<span class="td btn  
								<% if (task.status === "Not started") { %>
								red"
								<%} else if (task.status == "In progress") { %>
								orange"
								<% } else { %>
								green"
							<% } %>> <%= task.status %> </span>
								<form action="/tasks_method=DELETE” method="POST"><button type="submit" value=<&= task._id %>><span class="td"> <span class="glyphicon glyphicon-remove"></span></span></button></form>
							</div>
						<% }); %>

						<div class="tr"> 
							<div class="newtodo td btn">
								<span class="glyphicon glyphicon-plus"></span>
								New task
							</div>
							<div class="newtodo td btn">
							</div>
							<div class="newtodo td btn">
							</div>
							<div class="td" id="empty">
							</div>
						</div>
					</div>
				</div>
			<% }) %>
			
		</div>
	</div>
</div>

<% include partials/html-footer %>